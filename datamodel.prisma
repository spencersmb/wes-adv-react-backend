# ! is used to say the item cannot be null
enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}
type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetExpTime: String
  permission: [Permission]
}
 type Item {
   id: ID! @unique
   title: String!
   description: String!
   image: String
   largeImage: String
   price: Int!
  #  createAt: DateTime!
  #  updatedAt: DateTime!
   # user: User!
 }

 type Product {
   id: ID! @unique
   title: String!
   description: String!
 }